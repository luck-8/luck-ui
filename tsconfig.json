{
  "compilerOptions": {
    "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
    "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
    "jsx": "preserve",
    "lib": [
      "es6",
      "dom",
    ]
  },
  "include": [
    "**/*.*",
  ],
  "exclude": [
    "node_modules"
  ],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": "true",
}
